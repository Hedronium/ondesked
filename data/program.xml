<app id="calculator">
    <frame class="centered visible" title="Calculator">
        <menu_bar>
            <menu name="File">
                <menu_item>New File</menu_item>
                <menu_item onclick="open_file">Open</menu_item>
            </menu>
            <menu name="Edit">
                <menu_item onclick="increment">Increment</menu_item>
                <menu_item onclick="decrement">Decrement</menu_item>
                
                <menu name="hey">
                    <menu_item>now</menu_item>
                    <menu_item>brown</menu_item>
                    <menu_item>cow</menu_item>

                    <menu name="dog">
                        <menu_item>now</menu_item>
                        <menu_item>brown</menu_item>
                        <menu_item>cat</menu_item>
                    </menu>
                </menu>
            </menu>
            <menu name="Selection">
                <menu_item>New File</menu_item>
                <menu_item>Open</menu_item>
            </menu>
            <menu name="Help">
                <menu_item>About</menu_item>
                <menu_item>Documentation</menu_item>
            </menu>
        </menu_bar>

        <box_sizer class="vertical fit-parent">
            <panel>
                <box_sizer class="horizontal">
                    <text padding="xy-10">Hello World!</text>
                    <textfield padding="xy-10" grow="1">Hello World!</textfield>

                    <colpane padding="xy-10">
                        <box_sizer class="vertical">
                            <text>Hello World!</text>
                            <text>Hello World!</text>
                            <text>Hello World!</text>
                        </box_sizer>
                    </colpane>
                </box_sizer>
            </panel>
            <panel>
                <box_sizer class="horizontal">
                    <button padding="xy-10">7</button>
                    <button padding="xy-10">8</button>
                    <button padding="xy-10">9</button>
                </box_sizer>
            </panel>
            <panel>
                <box_sizer class="horizontal">
                    <button padding="xy-10">4</button>
                    <button padding="xy-10">5</button>
                    <button padding="xy-10">6</button>
                </box_sizer>
            </panel>
            <panel>
                <box_sizer class="horizontal">
                    <button padding="xy-10">1</button>
                    <button padding="xy-10">2</button>
                    <button padding="xy-10">3</button>
                </box_sizer>
            </panel>

            <panel>
                <box_sizer class="horizontal">
                    <table padding="xy-10" grow="1">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Hey</td>
                                <td>Now</td>
                                <td>Brown</td>
                            </tr>
                            <tr>
                                <td>Hey</td>
                                <td>Now</td>
                                <td>Brown</td>
                            </tr>
                            <tr>
                                <td>Hey</td>
                                <td>Now</td>
                                <td>Brown</td>
                            </tr>
                        </tbody>
                    </table>
                </box_sizer>
            </panel>
        </box_sizer>
    </frame>
</app>